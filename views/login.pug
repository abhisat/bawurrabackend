extends admin

block append content
  form(method='POST' action='/')
        div.form-group
          label(for='username') User Name:
          input#username.form-control(type='text', placeholder='Enter Login Username' name='username')
        div.form-group
          label(for='password') Password:
          input#password.form-control(type='password', placeholder='Enter the password' name='password')

        button.btn.btn-primary(type='submit') Login
