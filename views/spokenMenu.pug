extends admin

block content
  h1= title

  ul
  each spoken in spoken_List
    form(method='POST' action='/spokenMenu/editOrDelete')
      input#title.form-control(type='text', value=(spoken.title), name='title')
      input#media1.form-control(type='text', value=(spoken.media_1), name='media1')
      textarea#body.form-control(type='text', name='body') #{spoken.body}
      input#media2.form-control(type='text', value=(spoken.media_2), name='media2')
      input#video.form-control(type='text', value=(spoken.video), name='video')
      button.btn.btn-primary(type='submit', name='option', value='edit') Edit
      button.btn.btn-primary(type='submit', name='option', value='delete') Delete

  else
    li There is nothing spoken.

  button(class='addNew')
    a(href='/spokenMenu/new') Create New
