extends admin

block append content
  h1= title

  ul
  each history in history_List
    form(method='POST' action='/historyMenu/editOrDelete')
      input#title.form-control(type='text', value=(history.title), name='title')
      input#media1.form-control(type='text', value=(history.media_1), name='media1')
      textarea#body.form-control(type='text', name='body') #{history.body}
      input#media2.form-control(type='text', value=(history.media_2), name='media2')
      input#video.form-control(type='text', value=(history.video), name='video')
      button.btn.btn-primary(type='submit', name='option', value='edit') Edit
      button.btn.btn-primary(type='submit', name='option', value='delete') Delete

  else
    li There are no histories.

  button(class='addNew')
    a(href='/historyMenu/new') Create New
