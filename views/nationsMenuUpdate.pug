extends admin

block append content

  form(method='POST' action='/nationsMenu/editUpdate')
        div.form-group
          label(for='title') Title:
          input#title.form-control(type='text', value=(nation[0].title), name='title')
        div.form-group
          label(for='media1') Sub Title:
          input#media1.form-control(type='text', value=(nation[0].subtitle), name='subtitle')
        div.form-group
          label(for='body') Content:
          textarea#body.form-control(type='text', name='body') #{nation[0].body}
        div.form-group
          label(for='video') Video Link(optional):
          input#video.form-control(type='text', value=(nation[0].video), name='video')
        div.form-group
          label(for='icon') Icon:
          input#icon.form-control(type='file', value=(nation[0].icon), name='icon')

        button.btn.btn-primary(type='submit') Submit
